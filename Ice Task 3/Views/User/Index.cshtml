@model IEnumerable<Ice_Task_3.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Phone Number</th>
            <th>Registration Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>@item.PhoneNumber</td>
                <td>@item.RegistrationDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-controller="Transaction" asp-action="UserTransactions" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Books</a>
                    <a asp-controller="Fine" asp-action="UserFines" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Fines</a>
                </td>
            </tr>
        }
    </tbody>
</table>