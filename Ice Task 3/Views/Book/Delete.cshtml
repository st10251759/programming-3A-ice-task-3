@model Ice_Task_3.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.ISBN
        </dd>
        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @Model.Publisher
        </dd>
        <dt class="col-sm-2">
            Publication Year
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationYear
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category
        </dd>
        <dt class="col-sm-2">
            Available
        </dt>
        <dd class="col-sm-10">
            @(Model.IsAvailable ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>